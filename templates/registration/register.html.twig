{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-form">
        <h1>Rejoindre Twitter</h1>
        
        {{ form_start(registrationForm) }}
            {{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'placeholder': 'Répéter le mot de passe'}}) }}
            
            <div style="margin: 16px 0; display: flex; align-items: center; gap: 8px;">
                {{ form_widget(registrationForm.agreeTerms) }}
                <label for="{{ registrationForm.agreeTerms.vars.id }}" style="margin: 0; font-size: 14px;">
                    J'accepte les conditions d'utilisation
                </label>
            </div>
            
            <button type="submit" class="btn">S'inscrire</button>
        {{ form_end(registrationForm) }}
        
        <p style="text-align: center; margin-top: 16px;">
            <a href="/login">Déjà un compte ? Se connecter</a>
        </p>
    </div>
</div>
{% endblock %}
