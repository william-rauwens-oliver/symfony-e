                            {% endif %}
                            {% if publication.video %}
                                <div class="publication-media">
                                    <video controls style="max-width:100%; border-radius:12px; margin-top:10px;">
                                        <source src="/uploads/videos/{{ publication.video }}" type="video/mp4">
